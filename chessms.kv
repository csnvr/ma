ScreenManager:
    id: screen_manager
    ScreenWelcome:
        id: welcome_screen
        name:'welcome_screen'
    ScreenMain:
        id: main_screen
        name:'main_screen'
    ScreenSettings:
        id: settings_screen
        name:'settings_screen'

<ScreenWelcome>:

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: ''
            color: 0.3,0.2,0.7

        MDLabel:
            id: welcome_text
            halign: 'center'
            text: 'Welcome to Titos!'
            font_style: 'H3'
            font: 'RobotoBlack'

        MDLabel:
            id: info_text
            halign: 'center'
            text: ''
            font_style: 'Caption'

        MDTextField:
            id: phone_input
            name: 'phone_input'
            halign: 'center'
            hint_text: 'Your phone number'
            required: True
            helper_text_mode: 'on_error'
            helper_text: '[00386...]Phone number is essential for this game to run'
            max_text_length: 13
            color_mode: 'accent'
            icon_right: 'phone'
            multiline: False

        MDIconButton:
            name: 'welcome_button'
            pos_hint: {"center_x": .5, "center_y": .5}
            align: 'center'
            icon: 'content-save-move-outline'
            on_release:
                root.welcome_button()


<ScreenMain>:

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Handmade'
            color: 0.3,0.2,0.7
            right_action_items: [['settings',lambda x: root.settings()]]
            left_action_items: [['phone', lambda x: root.welcome()]]

        MDBottomNavigation:
            id: bottom_navigation
            panel_color: 0.4, 0.1, 0.2, 1

            MDBottomNavigationItem:
                name: 'play_tab'
                text: 'Play'
                icon: 'play'

                MDBoxLayout:
                    orientation: 'vertical'

                    Button:
                        id: button_bot
                        on_press: root.start_bot()
                        background_color: 0,0,0,0
                        size_hint: .30, .15
                        pos_hint: {'center_x': 0.5}
                        Image:
                            source: 'bot.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y

                    Button:
                        id: button_coop
                        on_press: root.start_coop()
                        background_color: 0,0,0,0
                        size_hint: .30, .15
                        pos_hint: {'center_x': 0.5}
                        Image:
                            source: 'coop.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y

                    Button:
                        id: button_multiplayer
                        on_press: root.start_multiplayer()
                        background_color: 0,0,0,0
                        size_hint: .30, .15
                        pos_hint: {'center_x': 0.5}
                        Image:
                            source: 'multiplayer.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y

            MDBottomNavigationItem:
                name: 'game_tab'
                text: 'Game'
                icon: 'chess-knight'


                MDGridLayout:
                    panel_color: 0.3,0.2,0.7,1
                    spacing: 10.0
                    cols: 3
                    rovs: 3

                    Button:
                        background_color: 0,0,0,1
                        on_release: root.gamebutton(1)
                        Image:
                            id: image_1
                            source: 'blackpixel.jpg'
