<ScreenSettings>:

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Vodka'
            color: 0.3,0.2,0.7
            left_action_items: [['keyboard-backspace', lambda x: root.back()]]

        MDGridLayout:
            cols: 2

            MDLabel:
                text: 'Settings'
                halign: 'center'

            MDSwitch:
                id: dark_mode_switch
                text: "Toggle dark mode"
                align: 'center'
                on_release: print('dark mode')
                on_press: print('light mode')



